<h2>Your Cart</h2>
<table>
	<%= render(cart.line_items) %>

	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price, :unit => "&euro;") %></td>
	</tr>
</table>

<div class="btn-group">
	<%= button_to "Checkout", new_order_path, method: :get, class: "btn btn-primary" %>
	<%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-primary" %>
</div>